- if flash[:error]
  div class="alert alert-danger" id="flash-bar"
    = flash[:error]
- if flash[:notice]
  div class="alert alert-primary" id="flash-bar"
    = flash[:notice]
  
  javascript:
    const alert = document.getElementById('flash-bar');
    setTimeout(() => {
      alert.hidden = true;
    }, 3000);



